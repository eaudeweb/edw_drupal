{% extends "paragraph.html.twig" %}
  {% block content %}
    {{ content|without("field_gallery_items") }}

    {% if items is not empty %}
      {% include 'edw_paragraphs_gallery:gallery' with {
        items: items,
        identifier: paragraph.id(),
        variant: variant,
        extra_attributes: [
          { name: 'data-mode', value: variant },
          { name: 'data-paragraph-id', value: paragraph.id() }
        ]
      } %}
    {% endif %}
  {% endblock %}
